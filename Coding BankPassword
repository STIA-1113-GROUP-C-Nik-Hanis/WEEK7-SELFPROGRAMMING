package repetitionAndSelection;

import java.util.Scanner;

public class Exercise2 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
                // System to check password bank
	    
	    Scanner sc = new Scanner (System.in);
	    int i ;
		
	    for(i=2;i>=0;i--) {
                 System.out.print("Enter your bank password: ");
                 int password = sc.nextInt();
                 int pass = 54321;
                
		if(password==pass) {
                    System.out.println("Your password is correct.");
                    break;
                    
		}else
                    System.out.print("Your password is wrong! You have "+i+" chance. Please enter your password again: ");
                    System.out.println();
            
	    if(i==0) {
            System.out.print("Sorry, you need to wait 5 minutes to key in your passwork again!");
            
            }
		}
			

	}

}
